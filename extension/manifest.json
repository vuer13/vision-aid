{
    "manifest_version": 3,
    "name": "Vision Aid",
    "version": "1.0.0",
    "description": "Visual Aid for dyslexia, eye strain, convergence insufficiency and other stuff!",
    "permissions": ["storage", "activeTab", "scripting", "tabs"],
    "host_permissions": ["<all_urls>"],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"],
            "css": ["style.css"],
            "run_at": "document_idle"
        }
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": "icons/icon128.png",
        "default_title": "Vision Aid"
    },
    "icons": {
        "128": "icons/icon128.png"
    }
}